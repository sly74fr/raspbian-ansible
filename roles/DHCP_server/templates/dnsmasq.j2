################################################################################
### Enabling logging
################################################################################
log-facility=/var/log/dnsmasq.log
log-dhcp

################################################################################
### Reading static '@MAC -> @IP' from /etc/ethers file
################################################################################
read-ethers

################################################################################
interface=eth0
################################################################################
# Only static
# dhcp-range=192.168.1.1,static,255.255.255.0,24h

# Static plus dcynamic range
dhcp-range=192.168.1.100,192.168.1.199,255.255.255.0,24h

# No routeur
dhcp-option=3

# No DNS
dhcp-option=6
